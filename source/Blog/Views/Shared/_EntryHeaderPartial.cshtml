@model Blog.Models.EntryViewModel

<div class="entry-header">
    <h1>@Html.ActionLink(@Model.Header, "Entry", "Blog", new { slug = Model.Slug }, null)</h1>
    <small><a>@Model.PublishedAt.ToString("MMMM dd, yyyy")</a></small>
    <small><a href="@string.Format("{0}#disqus_thread", Url.RouteUrl(new { controller="Blog", action = "Entry", slug  = Model.Slug }))"></a></small>
</div>
