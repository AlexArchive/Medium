@model Blog.Core.Data.Entities.BlogEntry

<article class="blog-entry">

    <div class="entry-header">
        <h1>@Html.ActionLink(@Model.Header, "Entry", "Blog", new { headerSlug = Model.HeaderSlug }, null)</h1>
        <small><a>@Model.PublishDate.ToString("MMMM dd, yyyy")</a></small>
    </div>


    @{
        var markdown = new MarkdownSharp.Markdown();
        @Html.Raw(markdown.Transform(Model.Summary))
    }


    @Html.ActionLink("Continue Reading", "Entry", "Blog", new { headerSlug = Model.HeaderSlug }, new { @class = "flat-button" })
</article>