@model Blog.Models.EntryViewModel
@{
    ViewBag.Title = Model.Header;
}

<article class=" blog-entry">

    <div class="entry-header">
        <h1>@Model.Header</h1>
        <small>@Model.PublishedAt.ToString("MMMM dd, yyyy")</small>
        <small><a href="@string.Format("{0}#disqus_thread", Url.RouteUrl(new { controller="Blog", action = "Entry", headerSlug = Model.Slug }))"></a></small>
    </div>

    @Html.Raw(Model.Content)

    @if (Model.AllowComments)
    {
        @Html.Partial("_Disqus")
    }

</article>