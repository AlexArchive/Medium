@model PostPage

@{
    ViewBag.Title = "Index";
}

<header class="page-header">
    <h1>
        Medium
    </h1>
</header>

<div class="row">
    <section class="col-lg-8 col-md-8">
        @foreach (var post in Model)
        {
            <article class="post">
                <h2>@Html.ActionLink(post.Title, "Index", "Post", new { postSlug = post.Slug }, new { })</h2>
                <p class="date">@post.PublishedAt.ToString("f", new CultureInfo("en-US"))</p>
                <div>
                    @MarkdownHelper.Transform(post.Body, Html)
                </div>
            </article>
            <hr />
        }
    </section>
    <aside class="col-lg-4 col-md-4">
        <h1>Medium</h1>
        <p>Medium is a beautiful blog engine. The project is open-source and hosted on <a href="https://github.com/ByteBlast/Medium">GitHub.</a></p>
        <p>You could put your own "About Me" here.</p>
    </aside>
</div>

@if (Model.TotalPageCount > 1)
{
    if (Model.HasNextPage)
    {
        @Html.ActionLink("Older", "Index", "Home", new { pageNumber = Model.PageNumber + 1 }, new { })
    }

    if (Model.HasPreviousPage)
    {
        @Html.ActionLink("Newer", "Index", "Home", new { pageNumber = Model.PageNumber - 1 }, new { })
    }
    <p>Page @Model.PageNumber of @Model.TotalPageCount</p>
}