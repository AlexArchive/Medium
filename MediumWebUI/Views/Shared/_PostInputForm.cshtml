@model PostInput

@Html.Partial("_ValidationSummary")
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(post => post.Slug)
            <div class="form-group">
                @Html.TextBoxFor(post => post.Title, new { @class = "form-control", placeholder = "Title" })
            </div>
            <div class="form-group">
                @Html.TextAreaFor(m => m.Body, new { id = "wmd-input", @class = "form-control ", placeholder = "Content" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Tags, new { id = "tag-input", @class = "form-control ", placeholder = "Tags" })
            </div>
            <div class="form-group">
                <label>
                    @Html.CheckBoxFor(m => m.Published)
                    Published
                </label>
            </div>
            <input type="submit" class="btn btn-primary" />
        }
    </div>
    <div class="col-md-6">
        <div id="wmd-preview" class="wmd-preview"></div>
    </div>
</div>
